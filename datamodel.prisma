type Post {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt

  abusive: Boolean! @default(value: false)
  content: String!
  published: Boolean! @default(value: false)
  thread: Thread @relation(link: INLINE)
}

type Thread {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt

  abusive: Boolean! @default(value: false)
  group: Group @relation(link: INLINE)
  posts: [Post!]!
  published: Boolean! @default(value: false)
  title: String!
}

type Group {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt

  description: String!
  name: String!
  threads: [Thread!]!
}
