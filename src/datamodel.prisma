type Post {
  id: ID! @id
  abusive: Boolean! @default(value: false)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  content: String!
  published: Boolean! @default(value: false)
  thread: Thread @relation(link: INLINE)
}

type Thread {
  id: ID! @id
  abusive: Boolean! @default(value: false)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  title: String!
  published: Boolean! @default(value: false)
  posts: [Post!]!
}
